{
	"compilerOptions": {
		"module": "commonjs",
		"allowJs": false,
		"strict": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": [
		"bin/**/*",
		"src/**/*"
	],
	"exclude": ["node_modules", "./handlebars.js", "**/*.spec.ts"]
}
